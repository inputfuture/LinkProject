<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="nihao"
              android:layout_marginTop="@dimen/size_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/name"
                android:textSize="@dimen/textsize_16sp"
                android:singleLine="true"
                android:textColor="@color/transparent_60"/>
            <RelativeLayout
                android:id="@+id/lyt_live"
                android:layout_width="@dimen/size_60dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_live"
                    android:layout_width="@dimen/size_4dp"
                    android:layout_height="@dimen/size_4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dip"
                    android:src="@drawable/yellow_border"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/record"
                    android:textSize="@dimen/textsize_12sp"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:text="直播中"
                    android:textColor="@color/transparent_60"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_30dp"
            android:gravity="center"
            android:id="@+id/time"
            android:background="@drawable/album_eidt_custom_selector"
            android:text="@string/str_listen"

            android:textSize="@dimen/textsize_16sp"
            android:singleLine="true"
            android:textColor="@color/transparent_60"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_move"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_dividing_line"
        />

</LinearLayout>
