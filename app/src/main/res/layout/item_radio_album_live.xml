<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_52dp"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_51dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/transparent_60"
            android:textSize="@dimen/textsize_16sp"/>

        <ImageView
            android:id="@+id/iv_live"
            android:layout_width="@dimen/size_4dp"
            android:layout_height="@dimen/size_4dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_toLeftOf="@+id/record"
            android:gravity="center"
            android:src="@drawable/yellow_border"
            />
        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_30dp"
            android:layout_toLeftOf="@+id/time"
            android:gravity="center"
            android:singleLine="true"
            android:text="直播中"

            android:textColor="@color/transparent_60"
            android:textSize="@dimen/textsize_16sp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/album_eidt_custom_selector"
            android:gravity="center"

            android:singleLine="true"
            android:text="@string/str_listen"
            android:textColor="@color/transparent_60"
            android:textSize="@dimen/textsize_16sp"/>

        <ImageView
            android:id="@+id/iv_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_dividing_line"
        />

</LinearLayout>
