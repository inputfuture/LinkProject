<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6000"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:tag="beta_title"
                android:id="@+id/title"
                android:paddingRight="8dip"
                android:paddingLeft="8dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/upgrade_bugly_title"
                android:paddingTop="11dp"
                android:paddingBottom="11dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/content"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            >
            <TextView
                android:tag="beta_upgrade_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info"
                android:textColor="#727272"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/strUpgradeDialogFeatureLabel"
                android:textColor="#727272"
                android:textSize="14sp" />
            <!-- 【必设】更新属性控件tag：beta_upgrade_feature-->
            <TextView
                android:tag="beta_upgrade_feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="feature"
                android:textColor="#727272"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_20dp">

            <TextView
                android:tag="beta_cancel_button"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/popupwindow_bt_cancle_selector"
                android:gravity="center"
                android:text="@string/upgrade_bugly_cancel"
                android:textSize="@dimen/size_16sp"
                android:textColor="@drawable/popupwindow_textcolor_cancle_selector"/>

            <TextView
                android:tag="beta_confirm_button"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/size_30dp"
                android:background="@drawable/popupwindow_bt_sure_selector"
                android:gravity="center"
                android:text="@string/upgrade_bugly_ok"
                android:textSize="@dimen/size_16sp"
                android:textColor="@drawable/popupwindow_textcolor_sure_selector"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
