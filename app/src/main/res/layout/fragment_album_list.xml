<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.letv.leauto.ecolink.ui.fragment.AlbumListFragment">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:background="@color/transparent_5">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_icon"
            android:padding="@dimen/size_12dp"
            android:background="@drawable/button_circle_selector"/>
        <LinearLayout
            android:layout_toRightOf="@+id/back"
            android:layout_width="@dimen/size_1dp"
            android:layout_height="@dimen/size_38dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent_5">

        </LinearLayout>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/album_name"
            android:textSize="@dimen/textsize_16sp"
            android:textStyle="bold"
            android:text="专辑名称"/>

        <ImageView
            android:layout_marginRight="@dimen/size_4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:padding="@dimen/size_5dp"
            android:id="@+id/music_state_icon"
            android:src="@mipmap/music_play_white"
            android:background="@drawable/button_circle_selector"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/all_rl"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_52dp"
        android:layout_below="@id/top_bar"
        >
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp"
            android:background="@drawable/button_rantage_selector"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:id="@+id/cb_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/song_not_selected"/>
            <TextView
                android:id="@+id/all_select_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6dp"
                android:text="@string/all_checked"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/transparent_60"/>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/all"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp"
            android:id="@+id/download"
            android:orientation="horizontal"
            android:paddingRight="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_10dp"
            android:background="@drawable/button_rantage_selector"
            android:gravity="center">
            <ImageView
                android:scaleType="center"
                android:id="@+id/download_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/download_icon"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6dp"
                android:text="@string/str_download"
                android:textSize="@dimen/size_16sp"
                android:id="@+id/download_txt"
                android:textColor="@color/transparent_60"/>
        </LinearLayout>
        <LinearLayout
            android:layout_centerVertical="true"

            android:id="@+id/favorite"
            android:layout_toRightOf="@+id/download"
            android:layout_alignTop="@+id/download"
            android:layout_alignBottom="@+id/download"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="wrap_content"
            android:clipChildren="true"
            android:gravity="center"
            android:background="@drawable/button_rantage_selector"
            >
            <ImageView
                android:scaleType="center"
                android:id="@+id/favorite_img"
                android:src="@mipmap/music_unfavor"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                />
            <TextView
                android:id="@+id/favorite_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6dp"
                android:text="@string/main_nav_collection"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/transparent_60" />

        </LinearLayout>

        <TextView
            android:layout_alignParentRight="true"
            android:background="@drawable/button_rantage_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/complete"
            android:text="@string/cancel"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:textSize="@dimen/size_16sp"
            android:visibility="gone"
            android:textColor="@color/transparent_60"/>
        <TextView
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_30dp"
            android:text="@string/selections"
            android:background="@drawable/album_eidt_custom_selector"
            android:id="@+id/selection"
            android:textSize="@dimen/size_16sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/transparent_60"/>
        <LinearLayout
            android:visibility="gone"
            android:clipChildren="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:id="@+id/order"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_100dp"
            android:layout_alignTop="@+id/download"
            android:layout_alignBottom="@+id/download"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rantage_selector"

            >
            <ImageView
                android:scaleType="center"
                android:id="@+id/order_img"
                android:src="@mipmap/order"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                />
            <TextView
                android:id="@+id/order_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/transparent_60" />

        </LinearLayout>



    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_below="@+id/all_rl"
        android:background="@color/transparent_20"

        ></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/all_rl">
        <com.letv.leauto.ecolink.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res/com.letv.leauto.ecolink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/album_list"
            android:layout_marginLeft="@dimen/size_20dp"
            ptr:ptrHeaderTextColor="#ffffff"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@color/transparent_30"
            android:scrollbarSize="@dimen/size_2dp"
            android:scrollbarStyle="outsideOverlay"
            android:divider="@null"
            android:listSelector="@drawable/music_list_selector"
            />
        <GridView
            android:layout_marginTop="@dimen/size_20dp"
            android:verticalSpacing="@dimen/size_20dp"
            android:horizontalSpacing="@dimen/size_40dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:id="@+id/select_grid"
            android:visibility="gone"
            android:numColumns="3"
            android:layout_height="match_parent"></GridView>
        <ImageView
            android:id="@+id/wait_view"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:id="@+id/nodate"
            android:textSize="@dimen/size_18sp"
            android:textColor="@color/transparent_60"
            android:clickable="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_10dp"
        android:gravity="center"
        android:id="@+id/connect_view"
        android:visibility="gone">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/net_image"
            android:src="@mipmap/noconnect"/>
        <TextView
            android:id="@+id/message"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/net_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/textsize_16sp"
            android:text="@string/net_not_good"
            android:textColor="@color/transparent_60"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/message">
            <TextView
                android:id="@+id/bt_refresh"
                android:layout_width="@dimen/size_90dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:background="@drawable/album_eidt_custom_selector"
                android:textSize="@dimen/textsize_16sp"
                android:text="@string/refresh_try"
                android:gravity="center"
                android:textColor="@color/transparent_60"/>
            <TextView
                android:layout_toRightOf="@+id/bt_refresh"
                android:layout_marginLeft="@dimen/size_40dp"
                android:layout_width="@dimen/size_90dp"
                android:layout_height="@dimen/size_30dp"
                android:gravity="center"
                android:id="@+id/bt_local_see"
                android:background="@drawable/album_eidt_custom_selector"
                android:layout_marginTop="@dimen/size_10dp"
                android:textSize="@dimen/textsize_16sp"
                android:text="@string/local_to_see"
                android:textColor="@color/transparent_60"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
