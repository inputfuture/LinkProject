<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingRight="@dimen/size_60dp"
        android:paddingLeft="60dp">


        <TextView
            android:id="@+id/tv_map_contral"
            android:layout_centerVertical="true"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/lots_manage"
            android:textColor="@color/transparent_60"
            android:textSize="16sp"
            android:background="@drawable/downloaded_manage"
        />
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_30"/>

    </RelativeLayout>

    <ListView
        android:layout_marginLeft="@dimen/size_60dp"
        android:layout_marginRight="@dimen/size_60dp"
        android:id="@+id/downloaded_map_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/transparent_30"
        android:scrollbarSize="@dimen/size_2dp"
        android:scrollbarStyle="outsideOverlay"></ListView>


</LinearLayout>