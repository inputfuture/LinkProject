<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="@dimen/size_20dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:text="北京"
        android:textColor="@color/transparent_60"
        android:textSize="@dimen/textsize_16sp" />

    <TextView
        android:id="@+id/name_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/name"
        android:text="总大小"
        android:textColor="@color/transparent_60"
        android:textSize="@dimen/textsize_16sp" />

    <LinearLayout
        android:id="@+id/download_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/download_progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/map_down_progress"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/download_status_image_no_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/str_download"
                android:textColor="@color/transparent_60"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/download_status_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/str_download"
                android:textColor="@color/transparent_60"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:background="@color/list_line" />

</RelativeLayout>