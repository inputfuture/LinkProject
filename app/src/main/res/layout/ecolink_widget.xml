<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/widget_bg"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_width="@dimen/size_18dp"
        android:layout_height="@dimen/size_18sp"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/size_14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
             <ImageView
                android:layout_width="@dimen/size_39dp"
                android:layout_height="@dimen/size_39dp"
                android:src="@mipmap/widget_favor"
                />
            <TextView
                android:layout_marginTop="@dimen/size_13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/widget_tab"
                android:textSize="@dimen/size_12sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/size_39dp"
                android:layout_height="@dimen/size_39dp"
                android:src="@mipmap/widget_local"

                />
            <TextView
                android:layout_marginTop="@dimen/size_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="本地"
                android:textColor="@color/widget_tab"
                android:textSize="@dimen/size_12sp"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/size_39dp"
                android:layout_height="@dimen/size_39dp"
                android:src="@mipmap/widget_home"
                />
            <TextView
                android:layout_marginTop="@dimen/size_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="回家"
                android:textColor="@color/widget_tab"
                android:textSize="@dimen/size_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company"
            android:layout_weight="1"

            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/size_39dp"
                android:layout_height="@dimen/size_39dp"
                android:src="@mipmap/widget_company"
                />
            <TextView
                android:layout_marginTop="@dimen/size_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="去公司"
                android:textColor="@color/widget_tab"
                android:textSize="@dimen/size_12sp"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/widget_music_warn"
        android:textColor="@color/widget_messge"
        android:text="你上次听到这"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/size_12dp"
        android:layout_marginTop="@dimen/size_8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/size_63dp"
            android:layout_height="@dimen/size_63dp"
            android:src="@mipmap/ic_defult"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/widget_tab"
                android:textSize="@dimen/size_16sp"/>

            <TextView
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/widget_messge"
                android:id="@+id/music_name"
                android:layout_below="@+id/album_name"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>