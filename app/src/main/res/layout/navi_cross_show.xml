<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:background="@color/background_main">
    <LinearLayout
        android:layout_height="@dimen/size_50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cross_distance"
            android:layout_width="@dimen/size_48dp"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cross_unit"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="match_parent"
            android:text="米后"
            android:textColor="@color/transparent_60"
            android:textSize="@dimen/size_12sp"
            android:layout_gravity="center"
            android:gravity="center"/>


        <com.amap.api.navi.view.NextTurnTipView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_6dp"
            android:id="@+id/cross_next_turn_view"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            ></com.amap.api.navi.view.NextTurnTipView>
        <View
            android:layout_width="@dimen/size_1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:background="@color/list_line"
            />

        <TextView
            android:layout_width="@dimen/size_34dp"
            android:layout_height="match_parent"
            android:text="进入"
            android:textColor="@color/transparent_60"
            android:textSize="@dimen/size_12sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cross_road_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_28dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cross_layout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true">
        <com.amap.api.navi.view.ZoomInIntersectionView
            android:id="@+id/cross_zoom_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

</LinearLayout>