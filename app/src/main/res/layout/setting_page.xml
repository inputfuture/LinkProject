<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size_20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_person_icon"
                        android:layout_width="@dimen/size_60dp"
                        android:layout_height="@dimen/size_60dp"
                        android:src="@mipmap/set_person_icon" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:text="我的车主卡"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_20sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:maxLines="1"
                        android:text="我是用户名称"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:maxLines="1"
                        android:text="登录"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />

                <RelativeLayout
                    android:id="@+id/lyt_music"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/music_list_selector"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:src="@mipmap/setting_ic_arraw" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_nav_music"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />

                <RelativeLayout
                    android:id="@+id/lyt_navi"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/music_list_selector"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/setting_ic_arraw" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/main_nav_map"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />

                <RelativeLayout
                    android:id="@+id/lyt_bright"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/music_list_selector"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_openlight_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/switch_off" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/str_setting_screen_light"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:background="@color/title_bg"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:text="乐键帮助"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />

                </RelativeLayout>


                <!--<ImageView-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/transparent_30" />-->
                <RelativeLayout
                    android:id="@+id/lyt_barrage"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_barrage_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/switch_off" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:text="微信弹幕"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/lyt_tts"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/music_list_selector"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_tts_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:src="@mipmap/switch_off" />

                    <TextView
                        android:id="@+id/tv_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/str_setting_tts"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/transparent_30" />

                <RelativeLayout
                    android:id="@+id/lyt_layout_display"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/music_list_selector"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_layout_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/switch_off" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/str_setting_screen_mode"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />

                <RelativeLayout
                    android:id="@+id/lr_cache"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/music_list_selector"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:src="@mipmap/setting_ic_arraw" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/str_setting_cache"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />

                    <TextView
                        android:id="@+id/tv_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@id/arrow"
                        android:paddingRight="@dimen/size_10dp"
                        android:text="0"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />
                </RelativeLayout>


                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />
                <RelativeLayout
                    android:id="@+id/lyt_fm"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/music_list_selector"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:src="@mipmap/setting_ic_arraw" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_ecolink"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />
                <RelativeLayout
                    android:id="@+id/lyt_keypad"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/music_list_selector"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/tv_keypad_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:text="未连接"

                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/ts_setting_item" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/setting_lebox"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/ts_setting_item" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />

                <RelativeLayout
                    android:id="@+id/about"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@drawable/music_list_selector"
                    android:gravity="center_vertical"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:src="@mipmap/setting_ic_arraw" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/about"
                        android:textColor="@color/transparent_60"
                        android:textSize="@dimen/textsize_16sp" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/transparent_30" />
