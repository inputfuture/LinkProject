<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_60dp"
    android:orientation="vertical"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:background="@drawable/item_single_selector">



        <RelativeLayout
            android:background="@drawable/item_single_selector"
            android:layout_marginLeft="@dimen/size_20dp"
            android:id="@+id/lyt_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_distance"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:lines="1"
                android:text="天安门"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"/>



            <TextView
                android:layout_below="@+id/tv_name"
                android:id="@+id/tv_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:ellipsize="marquee"
                android:lines="1"
                android:text="北京市朝阳区东城区长安街"
                android:textColor="@color/tran_white"
                android:textSize="@dimen/size_12sp"
                android:visibility="visible"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_arraw"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_centerVertical="true"
            android:lines="1"
            android:text="0米"
            android:textColor="@color/tran_white"
            android:textSize="@dimen/size_12sp"
            android:visibility="visible" />
        <ImageView
            android:background="@drawable/item_single_selector"
            android:id="@+id/iv_arraw"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_5dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/location_go"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:layout_alignLeft="@id/lyt_address"
            android:layout_alignParentBottom="true"
            android:background="@color/list_line"/>
    </RelativeLayout>


</LinearLayout>