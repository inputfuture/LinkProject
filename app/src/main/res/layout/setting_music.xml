<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_48dp"
            android:background="@color/transparent_5">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_4dp"
                android:layout_marginRight="@dimen/size_4dp"
                android:scaleType="center"
                android:background="@drawable/button_circle_selector"
                android:src="@mipmap/back_icon" />

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_toRightOf="@id/iv_back"
                android:background="@color/transparent_30" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="56dp"
                android:layout_toRightOf="@id/tv_line"
                android:gravity="center"
                android:text="@string/str_nav_music"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lyt_download"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_60dp"
                android:background="@drawable/music_list_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_download_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/tv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/user_nets_download"
                    android:textColor="@color/transparent_60"
                    android:textSize="@dimen/ts_setting_item" />

            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/list_line" />

            <RelativeLayout
                android:id="@+id/lyt_play"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size_60dp"
                android:background="@drawable/music_list_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/user_nets_paly"
                    android:textColor="@color/transparent_60"
                    android:textSize="@dimen/ts_setting_item" />
            </RelativeLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/list_line" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp"
        android:clipChildren="true" />

</RelativeLayout>