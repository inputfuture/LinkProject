<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/easy_stop_navi_layout"
    android:layout_width="fill_parent"
    android:layout_height="135dp"
    android:background="@color/transparent">

        <LinearLayout
            android:id="@+id/easy_stop_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:paddingRight="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/easy_stop_park_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/size_5dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:textSize="21sp"
                android:textColor="@color/transparent_black_60"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5dp"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/easy_stop_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/transparent_black_60"
                    android:maxLines="1"
                    android:ellipsize="marquee"/>

                <TextView
                    android:id="@+id/easy_stop_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/transparent_black_60"
                    android:textSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/easy_stop_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/transparent_black_60"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/easy_stop_first_hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/transparent_black_60"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/easy_stop_navi_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@mipmap/map_stop_circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/easy_stop_here"
                android:textSize="21sp"
                android:textColor="@color/white"/>
        </RelativeLayout>

</RelativeLayout>
