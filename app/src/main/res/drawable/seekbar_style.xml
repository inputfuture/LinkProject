<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/transparent_60"
                android:centerY="0.45"
                android:endColor="@color/transparent_60"
                android:startColor="@color/transparent_60" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip"/>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/green_color"
                    android:centerY="0.45"
                    android:endColor="@color/green_color"
                    android:startColor="@color/green_color" />
            </shape>
        </clip>
    </item>
</layer-list>
